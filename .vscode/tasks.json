{
    "tasks": [
        {
            "label": "build",
            "type": "cppbuild",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/bpf.c",
                "${workspaceFolder}/tun.c",
                "-o",
                "${workspaceFolder}/b.out",
                "-lpcap"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build_tun",
            "type": "cppbuild",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main_tun.c",
                "-o",
                "${workspaceFolder}/tun.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "build_bpf",
            "type": "cppbuild",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main_bpf.c",
                "${workspaceFolder}/bpf.c",
                "-o",
                "${workspaceFolder}/bpf.out",
            ],
            "options": {
