# reload default rules from /etc/pf.conf
# sudo pfctl -f /etc/pf.conf

src_if = "utun6"  # Source interface (VPN interface)
dst_if = "utun4"  # Destination interface (temporary TUN to route all VPN traffic)

pass in quick on $src_if all no state
pass out quick on $dst_if all flags any keep state
pass out quick on $src_if route-to $dst_if